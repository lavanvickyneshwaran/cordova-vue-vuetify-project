<?xml version='1.0' encoding='utf-8'?>
<widget id="com.irstha.driver" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CVV</name>
    <description>
      Cordova vuetify project
  </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
    Team
  </author>
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView android:id="@+id/imageDisplay" android:layout_height="wrap_content" android:layout_width="wrap_content" />
        <Button android:id="@+id/btnRotateImage" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Next Image" />
    </LinearLayout>
    <content src="dist/index.html" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-navigation href="file:///*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#4CAF50" />
    <preference name="StatusBarStyle" value="Lightcontent" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="android-minSdkVersion" value="19" />
    <access origin="file:///*" />
    <icon density="mdpi" height="57" platform="ios" src="res/icon.jpg" width="57" />
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-media" spec="^5.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
</widget>
